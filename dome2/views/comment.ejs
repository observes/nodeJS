<% for(var i =0;i<posts.comments.length;i++){ %>
<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <div class="pull-left">回复人<%= posts.comments[i].name %></div>
        <div class="pull-right">回复于<%= posts.comments[i].time %></div>
    </div>
    <div class="panel-body">
        <p><%= posts.comments[i].content %></p>
    </div>
</div>
<%}%>
<form method="post">
    <div class=" form-group">
        <label for="exampleInputEmail1">用户</label>
        <div style="width: 80px;" >
            <% if(user){ %>
                     <input type="text" class="form-control text-center" id="exampleInputEmail1" name="username" value="<%= user %>" readonly>
            <% }else{ %>
                    <input type="text" class="form-control text-center" id="exampleInputEmail1" name="username" value="游客" readonly>
            <% } %>
        </div>
    </div>
    <div class="form-group" >
        <label for="exampleInputFile">留言</label>
        <textarea name="content"  id="exampleInputFile" style="width: 100%;height: 400px;"></textarea>
        <p class="help-block">
           <span class="text-danger">输入少于500字</span>
        </p>
    </div>
    <button type="submit" class="btn btn-default">提交留言</button>
</form>