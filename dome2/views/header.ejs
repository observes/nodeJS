<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blog</title>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
        <header>
            <h1><%= title %></h1>
            <% if(user) { %>
                <h1>欢迎！！<a href="/u/<%= user %>" style="color: #00A000;font-size: 30px;"><%= user %></a></h1>
            <% } else {%>
            <h1>欢迎！！ 游客</h1>
            <% } %>
        </header>
        <nav>
            <span><a href="/" title="主页">主页</a></span>
            <% if(user) { %>
                <span><a href="/post" title="发表">发表</a></span>
                <span><a href="/upload" title="上传">上传</a></span>
                <span><a href="/logout" title="注销">注销</a></span>
            <%} else { %>
                <span><a href="/login" title="登陆">登陆</a></span>
                <span><a href="/reg" title="注册">注册</a></span>
            <% } %>
        </nav>
        <%  if(success){ %>
            <div><%= success %></div>
        <% } %>
        <%  if(error){ %>
            <div><%= error %></div>
        <% } %>